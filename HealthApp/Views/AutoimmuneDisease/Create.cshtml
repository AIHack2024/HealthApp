@model HealthApp.Models.AutoimmuneDiseaseEntry

<h2>Create Autoimmune Disease Entry</h2>

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <div class="form-group">
        <label asp-for="Age" class="control-label"></label>
        <input asp-for="Age" class="form-control" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" asp-items="ViewBag.Gender" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="FamilyHistory" class="control-label"></label>
        <select asp-for="FamilyHistory" asp-items="ViewBag.FamilyHistory" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="PreviousDiagnosis" class="control-label"></label>
        <select asp-for="PreviousDiagnosis" asp-items="ViewBag.PreviousDiagnosis" class="form-control"></select>
    </div>

    <!-- Similar setup for FamilyHistory, PreviousDiagnosis, and AutoimmuneDisease -->

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
